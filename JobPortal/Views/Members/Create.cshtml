@{
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

@section CssSection{

    <style type="text/css">
        .wrapper-page {
            margin: 2.5% auto;
            max-width: 700px;
            position: relative;
        }

        label {
            font-weight: bold;
        }

        .text-style {
            margin-top: -90px;
        }

        .card-body h3 {
            margin-left: 15px !important;
        }



        .form-control {
            font-size: 14px;
        }

        .text-muted {
            color: #000000 !important;
        }

        .header-text {
            color: #a24b4b;
        }
        .h4, h4 {
            font-size: large;
        }
    </style>

}

<div class="content">
<div class="container-fluid">
<div class="row">
       
</div>
    <!-- Begin page -->
<div class="wrapper-page">
    <div class="card">
        <div class="card-body">
            <h3 class="text-left m-0"><a href="" class="logo logo-admin"><img src="~/rex/assets/images/membershipicon.png" height="100" alt="logo"></a></h3>
            <div class="p-3">
                <div class="text-style">
                    <h4 class="text-muted  m-b-5 text-center page-title"><strong>ARHA Membership Application</strong></h4>
                    <p class="text-muted text-center"></p>
                </div>
                <br>
                @if (ViewBag.message != null)
                {
                    <h4>@ViewBag.message</h4>
                }

                <form class="form-horizontal m-t-30" method="post">
                    <div class="form-group">
                        <label for="Name"> <strong>Member Name</strong></label>
                        <input type="text" class="form-control" id="Name" placeholder="Name" name="Name">
                    </div>
                    <div class="form-group">
                        <label for="Number">Member Number</label>
                        <input type="text" class="form-control" id="Number" placeholder="Member Number" name="MemberNumber">
                    </div>
                    <div class="form-group">
                        <label for="Address">Member Address</label>
                        <input type="text" class="form-control" id="Address" placeholder="Address" name="Address">
                    </div>

                    <div class="form-group">
                        <label for="Phone">Member Phone</label>
                        <input type="text" class="form-control" id="Phone" placeholder="Phone" name="Phone">
                    </div>
                    <div class="form-group">
                        <label>Member Email</label>
                        <input type="email" class="form-control" placeholder="Email" name="Email">
                    </div>

                    <div class="form-group">
                        <label for="MembershipType">Membership Type</label>
                        <select class="form-control" id="MembershipType" name="MembershipType">
                            <option>Select</option>
                            <option value="Youth">Youth</option>
                            <option value="Adult">Adult</option>
                        </select>

                    </div>


                    <div class="form-group">
                        <label for="userpassword">Membership Status</label>
                        <select class="form-control" name="MembershipStatus">
                            <option>Select</option>
                            <option value="Open">Open</option>
                            <option value="Amature">Amature</option>
                            <option value="Youth">Youth</option>
                        </select>

                    </div>

                    <div class="form-group row m-t-20">
                        <div class="col-12 text-right">
                            <button class="btn btn-primary w-md waves-effect waves-light" type="submit">Submit</button>
                        </div>
                    </div>
                    <div class="form-group m-t-10 mb-0 row">

                    </div>
                </form>
            </div>
        </div>
    </div>
       
</div>
</div>
</div>


