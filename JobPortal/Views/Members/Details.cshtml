<div class="content">
    <div class="container-fluid">

        <!-- end row -->
        <div class="row">
            <div class="col-xl-2 col-md-4">
            </div>
            <div class="col-xl-8 col-md-10">
                <div class="card directory-card m-b-20">
                    <div>
                        <div class="directory-bg text-center">
                            <div class="directory-overlay"><img class="rounded-circle thumb-lg img-thumbnail" src="~/rex/assets/images/horseLogo.png" alt="Generic placeholder image"></div>
                        </div>
                        <div class="directory-content text-center p-4">
                            <br />
                            <br />
                            @*<p class="mt-4">Creative Director</p>*@
                            <h5 class="font-16" style="font-weight: bolder"> @ViewBag.memberInfo.Name</h5>



                            <div class="form-group row">
                                <label class="col-sm-5 col-form-label">Member Number</label>
                                <div class="col-sm-7">
                                    <input class="form-control" type="text" value="@ViewBag.memberInfo.MemberNumber" id="example-text-input">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-5 col-form-label">Member Phone</label>
                                <div class="col-sm-7">
                                    <input class="form-control" type="text" value="@ViewBag.memberInfo.Phone" id="example-text-input">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-5 col-form-label">Member Email</label>
                                <div class="col-sm-7">
                                    <input class="form-control" type="text" value="@ViewBag.memberInfo.Email" id="example-text-input">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-5 col-form-label">Membership Type</label>
                                <div class="col-sm-7">
                                    <input class="form-control" type="text" value="@ViewBag.memberInfo.MembershipType" id="example-text-input">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-5 col-form-label">Memberhship Status</label>
                                <div class="col-sm-7">
                                    <input class="form-control" type="text" value="@ViewBag.memberInfo.MembershipStatus" id="example-text-input">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-5 col-form-label">Address</label>
                                <div class="col-sm-7">
                                    <input class="form-control" type="text" value="@ViewBag.memberInfo.Address" id="example-text-input">
                                </div>
                            </div>
                            <br />
                            <div>
                                <a asp-action="Index" asp-controller="Members"><button type="button" class="btn btn-primary waves-effect waves-light">Back To List</button></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- end col -->
            <div class="col-xl-2 col-md-4">
            </div>
        </div>

        <!-- Modal -->
        <div class="modal fade" id="myModal" role="dialog">
            <div class="modal-dialog">

                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title"> </h4>
                    </div>
                    <div class="modal-body">
                        <h3>Member Information</h3>
                    </div>
                    <div class="modal-body">
                        <p id="memberNameView">Member Name  : </p>
                        <br />
                        <p>Member Number  : </p>
                        <br />
                        <p>Member Address  :</p>
                        <br />
                        <p>Member Phone  : </p>
                        <br />
                        <p>Member Email  :</p>
                    </div>

                    <div class="form-group m-t-10 mb-0 row">

                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <!-- container-fluid -->
</div>

